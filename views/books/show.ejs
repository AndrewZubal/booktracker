<%- include('../layout') %>
<h2><%= book.title %></h2>
<p>Author: <%= book.author %></p>
<p>Read: <%= book.read ? 'Yes' : 'No' %></p>
<p>Liked: <%= book.liked ? 'Yes' : 'No' %></p>
<a href="/books/<%= book._id %>/edit">Edit</a>
<form action="/books/<%= book._id %>?_method=DELETE" method="POST">
  <button type="submit">Delete</button>
</form>
